

@model HOL3.Models.User
    ViewBag.Title = "AddUser";

}

<h2>
    AddUser
    @using (Html.BeginForm("SaveUser", "Home"))
    {
        <P>
            User Name: <input type="text" name="@Html.TextBoxFor(User => User.UserName)" />
        </P>

        <p>
            Password: <input type="password" name="@Html.PasswordFor(User => User.Password)" />
        </p>

        <input type="submit" value="Add User" />
    }

</h2>

